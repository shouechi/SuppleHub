<header>
  <div class="navbar bg-[#90EE90] text-[#2E7D32] shadow-md px-4 py-2">
    <!-- ロゴ部分 -->
    <div class="navbar-start">
      <%= link_to 'SuppleHub', posts_path, class: 'flex items-center gap-2 text-xl font-bold text-[#2E7D32] hover:text-[#1B5E20] transition-colors duration-200' %>
    </div>
    
    <!-- 中央部分は空にする -->
    <div class="navbar-center"></div>

    <!-- 右側のアクション - すべての要素をここに移動 -->
    <div class="navbar-end flex items-center">
      <!-- デスクトップ用ナビゲーション（右寄せ） -->
      <div class="hidden lg:flex items-center gap-4 mr-2">
        <%= link_to posts_path, class: 'px-4 py-2 rounded-lg text-[#2E7D32] font-medium hover:bg-[#7CFC00]/30 hover:text-[#1B5E20] transition-all duration-200', data: { action: "click->loding#show" } do %>
          <div class="flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
            </svg>
            <span>投稿一覧</span>
          </div>
        <% end %>
        
        <%= link_to new_diagnosis_path, class: 'px-4 py-2 rounded-lg text-[#2E7D32] font-medium hover:bg-[#7CFC00]/30 hover:text-[#1B5E20] transition-all duration-200', data: { action: "click->loding#show" } do %>
          <div class="flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
            <span>サプリ診断</span>
          </div>
        <% end %>
      </div>
      
      <!-- 通知ボタン -->
      <div class="dropdown dropdown-end">
        <%= link_to notifications_path, class: "relative flex items-center justify-center w-10 h-10 rounded-full text-[#2E7D32] hover:bg-[#7CFC00]/30 hover:text-[#1B5E20] transition-all duration-200", data: { action: "click->loding#show" } do %>
          <div class="indicator">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"></path>
              <path d="M13.73 21a2 2 0 0 1-3.46 0"></path>
            </svg>
              
            <!-- 未読通知がある場合のみ表示 -->
            <% if unchecked_notifications.any? %>
              <span class="absolute inset-0 rounded-full animate-ping opacity-25 bg-[#66BB6A]" style="animation-duration: 3s;"></span>
              <span class="indicator-item badge bg-[#66BB6A] text-white badge-sm">
                <%= unchecked_notifications.count %>
              </span>
            <% end %>
          </div>
        <% end %>
      </div>
      
      <!-- ユーザーメニュー（デスクトップ） -->
      <div class="dropdown dropdown-end hidden lg:block ml-2 z-20">
        <label tabindex="0" class="btn btn-ghost btn-circle avatar placeholder hover:bg-[#7CFC00]/30 transition-all duration-200">
          <div class="bg-[#2E7D32] text-white rounded-full w-10 flex items-center justify-center shadow-sm border-2 border-[#81C784]">
            <span class="text-sm font-medium"><%= current_user.name.first.upcase %></span>
          </div>
        </label>
        <ul tabindex="0" class="menu dropdown-content mt-2 p-2 shadow-lg bg-white rounded-lg w-56 text-[#2E7D32] border border-[#E8F5E9]">
          <li class="menu-title pt-2 pb-1">
            <span class="text-xs font-semibold uppercase text-[#66BB6A] tracking-wider">アカウント</span>
          </li>
          <li>
            <%= link_to user_path(current_user), class: 'flex items-center gap-2 py-2 hover:bg-[#F1F8E9] rounded-md transition-colors duration-150' do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              <span>プロフィール</span>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, data: { turbo_method: :delete }, class: 'flex items-center gap-2 py-2 hover:bg-[#F1F8E9] rounded-md transition-colors duration-150 text-red-600 hover:text-red-700' do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
              </svg>
              <span>ログアウト</span>
            <% end %>
          </li>
        </ul>
      </div>
    
      <!-- モバイル用ハンバーガーメニュー -->
      <div class="dropdown dropdown-end lg:hidden ml-2 relative z-50">
        <label tabindex="0" class="btn btn-ghost btn-circle text-[#2E7D32] hover:bg-[#7CFC00]/30 transition-all duration-200">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </label>
        <ul tabindex="0" class="menu dropdown-content mt-2 p-2 shadow-lg bg-white rounded-lg w-56 text-[#2E7D32] border border-[#E8F5E9] right-0">
          <li class="menu-title pt-2 pb-1">
            <span class="text-xs font-semibold uppercase text-[#66BB6A] tracking-wider">メニュー</span>
          </li>
          <li>
            <%= link_to posts_path, class: 'flex items-center gap-2 py-2 hover:bg-[#F1F8E9] rounded-md transition-colors duration-150', data: { action: "click->loding#show" } do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
              </svg>
              <span>投稿一覧</span>
            <% end %>
          </li>
          <li>
            <%= link_to new_diagnosis_path, class: 'flex items-center gap-2 py-2 hover:bg-[#F1F8E9] rounded-md transition-colors duration-150', data: { action: "click->loding#show" } do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
              </svg>
              <span>サプリ診断</span>
            <% end %>
          </li>
          <li class="menu-title pt-3 pb-1 border-t border-[#E8F5E9] mt-2">
            <span class="text-xs font-semibold uppercase text-[#66BB6A] tracking-wider">アカウント</span>
          </li>
          <li>
            <%= link_to user_path(current_user), class: 'flex items-center gap-2 py-2 hover:bg-[#F1F8E9] rounded-md transition-colors duration-150', data: { action: "click->loding#show" } do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              <span>プロフィール</span>
            <% end %>
          </li>
          <li>
            <%= link_to destroy_user_session_path, data: { turbo_method: :delete, action: "click->loading#show" }, class: 'flex items-center gap-2 py-2 hover:bg-[#F1F8E9] rounded-md transition-colors duration-150 text-red-600 hover:text-red-700' do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
              </svg>
              <span>ログアウト</span>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </div>
</header>