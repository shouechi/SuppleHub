<header class="relative z-20 bg-[#90EE90] shadow-md">
  <nav class="container mx-auto px-4 py-3">
    <div class="flex items-center justify-between">
      <!-- ロゴ -->
      <div class="flex-shrink-0">
        <%= link_to 'SuppleHub', posts_path, class: 'text-2xl font-bold text-[#2E7D32] tracking-tight hover:text-[#1B5E20] transition-colors' %>
      </div>

      <!-- デスクトップナビゲーション -->
      <div class="hidden lg:flex items-center space-x-1">
        <%= link_to '投稿一覧', posts_path, class: 'px-4 py-2 rounded-lg text-[#2E7D32] hover:bg-[#7CFC00]/30 hover:text-[#1B5E20] transition-colors', data: { action: "click->loding#show" } %>
        <%= link_to '新規登録', new_user_registration_path, class: 'px-4 py-2 rounded-lg text-[#2E7D32] hover:bg-[#7CFC00]/30 hover:text-[#1B5E20] transition-colors', data: { action: "click->loding#show" } %>
        <%= link_to 'ログイン', user_session_path, class: 'ml-2 px-4 py-2 bg-white text-[#2E7D32] rounded-lg font-medium hover:bg-[#F1F8E9] hover:text-[#1B5E20] transition-colors border border-[#81C784]', data: { action: "click->loding#show" } %>
        <%= link_to 'サプリ診断', new_diagnosis_path, class: 'flex items-center gap-2 py-2 hover:bg-[#F1F8E9] rounded-md transition-colors duration-150', data: { action: "click->loding#show" }%>
      </div>

      <!-- モバイルメニュー（DaisyUI dropdown） -->
      <div class="dropdown dropdown-end lg:hidden">
        <label tabindex="0" class="btn btn-ghost text-[#2E7D32] hover:bg-[#7CFC00]/30">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </label>
        <ul tabindex="0" class="dropdown-content menu p-2 mt-2 shadow-lg bg-white rounded-box w-52 z-30">
          <li><%= link_to '投稿一覧', posts_path, class: 'text-[#2E7D32] hover:bg-[#F1F8E9]', data: { action: "click->loding#show" }%></li>
          <li><%= link_to '新規登録', new_user_registration_path, class: 'text-[#2E7D32] hover:bg-[#F1F8E9]', data: { action: "click->loding#show" } %></li>
          <li><%= link_to 'ログイン', user_session_path, class: 'text-[#2E7D32] hover:bg-[#F1F8E9]', data: { action: "click->loding#show" } %></li>
          <li><%= link_to 'サプリ診断', new_diagnosis_path, class: 'text-[#2E7D32] hover:bg-[#F1F8E9]', data: { action: "click->loding#show" }%></li>
        </ul>
      </div>
    </div>
  </nav>
</header>