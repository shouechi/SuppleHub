<div class="mt-4 flex flex-col gap-3">
  <!-- 主要アクション -->
  <%- if controller_name != 'sessions' %>
    <%= link_to "ログイン", new_session_path(resource_name), class: "btn btn-primary w-full" %>
  <% end %>
  
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "新規登録", new_registration_path(resource_name), class: "btn btn-outline w-full" %>
  <% end %>

  <!-- 補助リンク -->
  <div class="flex flex-col gap-2 mt-2">
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "パスワードを忘れた場合", new_password_path(resource_name), class: "text-sm text-center text-primary hover:underline" %>
    <% end %>
    
    <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
      <%= link_to "確認メールが届きませんか？", new_confirmation_path(resource_name), class: "text-sm text-center text-primary hover:underline" %>
    <% end %>
    
    <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
      <%= link_to "ロック解除メールが届きませんか？", new_unlock_path(resource_name), class: "text-sm text-center text-primary hover:underline" %>
    <% end %>
  </div>
</div>