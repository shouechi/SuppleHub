<div class="flex justify-center items-center min-h-screen bg-gray-100">
  <div class="card w-full max-w-md shadow-lg bg-white rounded-lg">
    <div class="card-body">
      <div class="mb-6 text-center">
        <span class="text-3xl font-bold text-gray-800">
          ログイン
        </span>
      </div>

      <div class="flex flex-wrap justify-center">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "w-full" }, data: { turbo: false }) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>

          <div class="mb-4">
            <%= f.label :email, class: "block text-sm font-medium text-gray-600 mb-1" %>
            <%= f.email_field :email, class: "w-full rounded-md border border-gray-300 py-2 px-3 placeholder-gray-400 focus:border-indigo-500 focus:ring-indigo-100 focus:outline-none" %>
          </div>

          <div class="mb-4">
            <%= f.label :password, class: "block text-sm font-medium text-gray-600 mb-1" %>
            <%= f.password_field :password, class: "w-full rounded-md border border-gray-300 py-2 px-3 placeholder-gray-400 focus:border-indigo-500 focus:ring-indigo-100 focus:outline-none" %>
          </div>

          <div class="mt-4 flex justify-center">
            <%= f.submit 'ログイン', class: "w-32 rounded-md bg-indigo-500 py-3 text-white font-bold hover:bg-indigo-600 focus:outline-none focus:ring focus:ring-indigo-1000" %>
          </div>

          <div class="mt-4 flex justify-center">
            or
          </div>

          <div class="mt-4 flex justify-center">
            <%= button_to user_google_oauth2_omniauth_authorize_path, method: :post, data: { turbo: false }, class: "btn btn-outline gap-2 w-full sm:w-auto" do %>
                <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24" class="h-5 w-5">
                  <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
                  <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
                  <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
                  <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
                  <path d="M1 1h22v22H1z" fill="none"/>
                </svg>
                Google でサインイン
            <% end %>
          </div>
        <% end %>
      </div>

      <div class="mt-6 text-center">
        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>
